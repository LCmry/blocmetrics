<!DOCTYPE html>
<html>
<head>
  <title>Blocmetrics</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">
      <ul class="nav nav-tabs">
        <% if current_user %>
          <li><%= link_to "Blocmetrics", root_path %></li>
          <li><%= link_to "Dashboard", user_path(current_user) %></li>
          <li class="pull-right"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <li class="pull-right"><%= link_to "Account", edit_user_registration_path(current_user) %></li>
        <% else %>
          <li><%= link_to "Home", root_path %></li>
        <% end %>
      </ul>
    </div>
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button class="close" "data-dismiss"="alert" type="button">×</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:error] %>
      <div class="alert alert-danger">
        <button class="close" "data-dismiss"="alert" type="button">×</button>
        <%= flash[:error] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning" %>
        <button class="close" "data-dismiss"="alert" type="button">×</button>
        <%= flash[:alert] %>
      </div>
    <% end %>

<%= yield %>

</body>
</html>
