<div class="container">
  <h1>Add a New Site</h1>
  <div class="row">
    <div class="col-md-8">
      <%= form_for [@user, @site] do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter site name" %>
        </div>
        <%= f.submit "Add", class: 'btn btn-success' %>
      <% end %>
      <%= link_to "Back", @user %>
    </div>
  </div>
</div>