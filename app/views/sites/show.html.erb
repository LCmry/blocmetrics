<%= javascript_include_tag 'sites' %>
<h1><%= @site.name %></h1>
Site Id: <%= @site.id %>
<p><%= @site.events.count %></p>
<% @site.events.each do |event| %>
  <%= javascript_tag do %>
    view = '1';
    date = <%= event.created_at.to_date %>;
    var views = new Array();
    views.push(view);
    var dates = new Array();
    dates.push(date);
  <% end %>
<% end %>
<canvas id="lineChart" width="400" height="400"></canvas>
<%= link_to "Delete Site", [@user, @site], method: :delete %>
<%= link_to "Back", @user %>